        <artifactId>geronimo-activation_1.0.2_spec</artifactId>
        <version>1.1</version>
      </dependency>
      
      <dependency>
        <groupId>jaxen</groupId>
        <artifactId>jaxen</artifactId>
        <version>1.1.1</version>
        <exclusions>
          <exclusion>
            <groupId>jdom</groupId>
