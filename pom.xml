  <distributionManagement>
    <repository>
      <id>apache.snapshots</id>
      <name>Apache Incubating Repository</name>
      <url>scp://people.apache.org/home/dandiep/public_html/abdera-take7</url>
    </repository>
  </distributionManagement>

  <properties>
